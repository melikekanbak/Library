@model BookType
@using Library.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h3 class="text-center">Yeni Kitap Tipi Ekleme Sayfası</h3>
<form method="post" asp-controller="BookType" asp-action="Create" asp-area="Management">
    <div class="mb-3">
        <label class="form-label" asp-for="Name">Kitap Tipi Adı</label>
        <input type="text" class="form-control" asp-for="Name"/>
    </div>
    
    <button type="submit" class="btn btn-primary">Kaydet</button>
</form>